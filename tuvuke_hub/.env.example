# Django Environment Variables
# Copy this file to .env and fill in your actual values

# Security Settings
SECRET_KEY=your-super-secret-key-here-change-this-in-production
DEBUG=True

# Database Configuration (MySQL)
DATABASE_URL=mysql://username:password@localhost:3306/tuvuke_hub_db

# Alternative database settings (if not using DATABASE_URL)
DB_NAME=tuvuke_hub_db
DB_USER=your_db_username
DB_PASSWORD=your_db_password
DB_HOST=localhost
DB_PORT=3306

# Allowed Hosts (comma-separated for production)
ALLOWED_HOSTS=localhost,127.0.0.1

# Email Configuration (Optional)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password
EMAIL_USE_TLS=True

# Third-party API Keys
AFRICASTALKING_USERNAME=your_username
AFRICASTALKING_API_KEY=your_api_key

# AWS Settings (for file storage)
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_STORAGE_BUCKET_NAME=your_bucket_name
AWS_S3_REGION_NAME=us-east-1

# Cache Configuration
REDIS_URL=redis://localhost:6379/1

# Other Settings
TIME_ZONE=UTC
LANGUAGE_CODE=en-us
